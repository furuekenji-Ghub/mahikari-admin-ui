    .muted { color:#666; font-size:0.9em; }
    code { background:#f3f3f3; padding:2px 6px; border-radius:6px; }
  </style>
</head>
<body>

<header>
  <h2>Super Admin</h2>
  <small><a href="/index.html">‚Üê Back to Dashboard</a></small>
</header>

<div class="card">
  <p class="muted">
    This page manages the allowlist used by the Worker.<br/>
    API: <code>/api/admin/allowlist</code>
  </p>

  <div class="row">
    <button type="button" onclick="loadList()">Load allowlist</button>
    <button type="button" onclick="saveList()">Save allowlist</button>
    <span class="muted" id="status"></span>
  </div>

  <p class="muted">
    Enter one email per line. Only <code>@worlddivinelight.org</code> should be used.
  </p>

  <textarea id="emails" placeholder="furuek@worlddivinelight.org&#10;someone@worlddivinelight.org"></textarea>
</div>

<script>
  function setStatus(msg){ document.getElementById("status").textContent = msg || ""; }

  async function loadList(){
    setStatus("Loading...");
    const res = await fetch("/api/admin/allowlist");
    const text = await res.text();
    let data;
    try { data = text ? JSON.parse(text) : null; } catch { data = { raw: text }; }

    if (!res.ok) {
      setStatus("Failed: " + res.status);
      alert("Load failed:\n" + text);
      return;
    }

    const emails = (data.allowed_emails || []).join("\n");
    document.getElementById("emails").value = emails;
    setStatus("Loaded");
  }

  async function saveList(){
    const raw = document.getElementById("emails").value || "";
    const allowed_emails = raw.split("\n").map(s => s.trim()).filter(Boolean);

    setStatus("Saving...");
    const res = await fetch("/api/admin/allowlist", {
      method: "POST",
      headers: { "content-type": "application/json" },
      body: JSON.stringify({ allowed_emails })
    });

    const text = await res.text();
    let data;
    try { data = text ? JSON.parse(text) : null; } catch { data = { raw: text }; }

    if (!res.ok) {
      setStatus("Failed: " + res.status);
      alert("Save failed:\n" + text);
      return;
    }

    document.getElementById("emails").value = (data.allowed_emails || []).join("\n");
    setStatus("Saved");
  }

  loadList();
</script>

</body>
</html>
